@model TaskBagIndexViewModel

<h2>Your TaskBag</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Item</th>
            <th>Subscrition Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Tasks)
        {
        <tr>
            <td>
                <div class="card card-outline-primary m-1 p-1">
                    <div class="bg-faded p-1">
                        <h4>
                            @t.Category
                            <span class="badge badge-pill badge-primary" style="float:right">
                                <small>
                                    @t.CreationDateTime
                                </small>
                            </span>
                        </h4>
                    </div>
                    <div class="card-text p-1">@t.Description </div>
                    @*<div class="card-text p-1">@t.Person.FirstName</div>
                    <div class="card-text p-1">@t.Person.LastName</div>
                    <div class="card-text p-1">@t.Person.Address</div>*@
                </div>
            </td>
            <td>@System.DateTime.Now</td>
            <td>
                <form asp-action="Unsubscribe" method="post">
                    <input type="hidden" name="taskId"
                           value="@t.TaskId" />
                    <input type="hidden" name="returnUrl"
                           value="@Model.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-danger">
                        Unsubscribe
                    </button>
                </form>
                <form>
                    <input type="hidden" name="TaskID"
                           value="@t.TaskId" />
                    <input type="hidden" name="returnUrl"
                           value="@Model.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-danger">
                        Done
                    </button>
                </form>
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2" class="text-right">Total:</td>
            <td class="text-right">
                @Model.Tasks.Count()
            </td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue subscribing</a>
</div>

