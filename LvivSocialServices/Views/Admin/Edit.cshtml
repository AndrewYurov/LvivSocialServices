@model LvivSocialServices.Models.Task
@{
    ViewBag.Title = "Edit Task";
    Layout = "_AdminLayout";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TaskId" />

    <div class="form-group">
        <label asp-for="Category"></label>
        @*<div><span asp-validation-for="Category" class="text-danger"></span></div>*@
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        @*<div><span asp-validation-for="Description" class="text-danger"></span></div>*@
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Person.FirstName"></label>
        @*<div><span asp-validation-for="Person.FirstName" class="text-danger"></span></div>*@
        <input asp-for="Person.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Person.LastName"></label>
        @*<div><span asp-validation-for="Person.LastName" class="text-danger"></span></div>*@
        <input asp-for="Person.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Person.Address"></label>
        @*<div><span asp-validation-for="Person.Address" class="text-danger"></span></div>*@
        <input asp-for="Person.Address" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>